{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center vh-100 container text-center text-light">
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {'attr': {
            'class': 'w-50 bg-secondary p-4 rounded-2 mb-5'
        }}) }}

        <div class="mb-3 w-100 d-flex text-center">
            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email) }}
        </div>
        <div class="mb-3 w-100 d-flex text-center">
            {{ form_label(registrationForm.username) }}
            {{ form_widget(registrationForm.username) }}
        </div>
        <div class="mb-3 w-100 d-flex text-center">
            {{ form_label(registrationForm.plainPassword) }}
            {{ form_widget(registrationForm.plainPassword) }}
        </div>
        {{ form_row(registrationForm.agreeTerms) }}

        <button class="btn btn-dark" type="submit">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
