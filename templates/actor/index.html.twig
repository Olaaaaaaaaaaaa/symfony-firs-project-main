{% extends 'base.html.twig' %}

{% block title %}Actor index
{% endblock %}

{% block body %}
	<h1>Actor index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>FirstName</th>
				<th>LastName</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for actor in actors %}
				<tr>
					<td>{{ actor.id }}</td>
					<td>{{ actor.firstName }}</td>
					<td>{{ actor.lastName }}</td>
					<td>
						<a href="{{ path('app_actor_show', {'id': actor.id}) }}">show</a>
						{% if is_granted('ROLE_ADMIN') %}
							<a href="{{ path('app_actor_edit', {'id': actor.id}) }}">edit</a>
						{% endif %}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('app_actor_new') }}">Create new</a>
	{% endif %}
{% endblock %}
